<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/from_img"
            style="@style/chat_image_size"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher_round"

            />

        <LinearLayout
            android:id="@+id/patient_from_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/chat_patient_bg"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="病例分享"
                    android:textSize="@dimen/chat_title_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/chat_tv_text" />

                <TextView
                    android:id="@+id/chat_patient_msg"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="xz"
                    android:textColor="@color/chat_tv_title"
                    android:textSize="@dimen/chat_title_size" />

                <TextView
                    android:id="@+id/chat_patient_Diagnosis_msg"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="3"
                    android:text="1111ssssssssssssssssssssssssssssssssssssssssssssssssssssss"
                    android:textColor="@color/chat_tv_text"
                    android:textSize="@dimen/chat_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/chat_tv_text" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:text="查看详情"
                    android:textColor="@color/chat_tv_text"
                    android:textSize="@dimen/chat_text_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
